<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Default colors -->
    <Color x:Key="PrimaryColor">#FF6B48C8</Color>
    <Color x:Key="SecondaryColor">#FF4C79FF</Color>

    <!-- Default brushes -->
    <LinearGradientBrush x:Key="MainBackground" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource PrimaryColor}" Offset="0"/>
        <GradientStop Color="{StaticResource SecondaryColor}" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="CardBackground" Color="White"/>
    <SolidColorBrush x:Key="DarkCardBackground" Color="#FF323232"/>
    <SolidColorBrush x:Key="DarkBackground" Color="#FF1E1E1E"/>
</ResourceDictionary>